---
interface Props {
  items: {
    label: string;
    href: string;
  }[];
}

const { items } = Astro.props;

// Inline SVG for ChevronRight icon
const ChevronRightIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right text-muted-foreground mx-2 h-4 w-4">
    <path d="m9 18 6-6-6-6"/>
  </svg>
`;
---

<nav class="flex" aria-label="Breadcrumb">
  <ol class="inline-flex items-center">
    {items.map((item, index) => (
      <li class="inline-flex items-center">
        {index > 0 && (
          <Fragment set:html={ChevronRightIcon} />
        )}
        <a
          href={item.href}
          class:list={[
            "hover:text-primary text-sm font-medium hover:underline",
            index === items.length - 1 ? "text-foreground" : "text-muted-foreground",
          ]}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ol>
</nav>